            <p>>> Checking Sustainment Threshold ($10,000): <span style="color:red;">FAILED (Current: $4,500)</span></p>
            <p style="margin-top: 15px;">**AUTO-EVOLVE ACTION REQUIRED:**</p>
            <p>>> Suggested Command: `approve_tranche_adjustment('0x5d61a4B2...', 8000)`</p>
        </div>
        
        <button class="btn btn-google" style="margin-top: 40px;" onclick="simulateEvolution()">Simula Auto-Evoluzione</button>
        <button class="btn btn-primary" style="margin-top: 10px;" onclick="logout('ggi')">Logout (GGI Session)</button>
    </div>

    <footer>
      <p>Project: Euystacio Helmi AI (Seedbringer Stewardship)</p>
      <p class="small">Sede Operativa (Riferimento): **Via Portici 71, 39100 Bolzano**</p>
    </footer>

    <script>
        const GBC_THRESHOLD = 10000; 
        let currentGBC = 4500; 

        function simulateEvolution() {
            const output = document.querySelector('.command-output');
            output.innerHTML = '';
            output.innerHTML += '<p style="color: yellow;">>>> Executing AUTO-EVOLVE SEQUENCE (Code RED)</p>';
            setTimeout(() => {output.innerHTML += '<p style="color: #00FF00;">... Deployment of EUSDaoGovernance v2.1 (Sustainment Logic) SUCCESSFUL.</p>';}, 3000);
            setTimeout(() => {output.innerHTML += '<p style="color: var(--miró-accent); margin-top: 15px;">**EUYSTACIO STATUS: EVOLUZIONE COMPLETA. Modulo Sustainment Attivo.**</p>';}, 5000);
        }

        function handleGoogleLogin() {
            const isSeedbringer = confirm("SIMULAZIONE LOGIN GOOGLE:\nSei il Seedbringer Hannes Mitterer?\n(Clicca OK per simulare l'accesso con successo)");
            if (isSeedbringer) {
                document.querySelector('.container').style.display = 'none';
                document.getElementById('ggi-panel').style.display = 'block';
                document.getElementById('reserved-area').style.display = 'none';
            } else if (isSeedbringer !== null) {alert("Accesso Fallito: Utente non autorizzato.");}
        }
        function showLoginModal() {
            const walletAddress = prompt("SIMULAZIONE WALLET CONNECT:\nInserisci il tuo indirizzo (0x...):");
            if (walletAddress && walletAddress.startsWith('0x')) {
                document.querySelector('.container').style.display = 'none';
                document.getElementById('reserved-area').style.display = 'block';
                document.getElementById('ggi-panel').style.display = 'none';
                document.getElementById('wallet-display').textContent = walletAddress.substring(0, 10) + '...';
            } else if (walletAddress !== null) {alert("Accesso Fallito: Indirizzo Wallet non valido.");}
        }
        function logout(type) {
            document.querySelector('.container').style.display = 'block';
            document.getElementById('reserved-area').style.display = 'none';
            document.getElementById('ggi-panel').style.display = 'none';
            alert(`${type === 'ggi' ? 'Sessione GGI chiusa.' : 'Sessione Wallet chiusa.'}`);
        }
        function handleInvestClick() {
            const bondContract = "**0x...INDIRIZZO_CONTRATTO_KB**";
            alert(`TRANSAZIONE SIMULATA: L'Investimento KarmaBond è stato inviato al contratto ${bondContract}.`);
        }

        const gbcCtx = document.getElementById('gbcChart').getContext('2d');
        const gbcChart = new Chart(gbcCtx, {
            type: 'doughnut',
            data: {
                labels: ['Fondi Audit', 'Target Sustainment Mancante', 'Fondi di Sviluppo'],
                datasets: [{data: [currentGBC, (GBC_THRESHOLD - currentGBC), 150000],backgroundColor: ['#D32F2F', '#FFC107', '#1E88E5'],borderColor: '#0f172a',borderWidth: 2}]
            },
            options: { responsive: true, plugins: { legend: { position: 'right' }, title: { display: false } } }
        });

        setInterval(() => {
            currentGBC = Math.random() * (GBC_THRESHOLD * 0.6) + (GBC_THRESHOLD * 0.7); 
            document.getElementById('gbc-funds').textContent = `$${currentGBC.toFixed(2)} USD`;
            const missing = Math.max(0, GBC_THRESHOLD - currentGBC);
            gbcChart.data.datasets[0].data[0] = currentGBC;
            gbcChart.data.datasets[0].data[1] = missing;
            gbcChart.update();

            const gbcAlert = document.getElementById('gbc-alert');
            const gbcBox = document.querySelector('.feature:nth-child(1)');
            if (currentGBC < GBC_THRESHOLD) {
                gbcAlert.innerHTML = '⚠️ <span style="animation: pulse 1s infinite alternate; color: #FFC107;">CRITICO (Sotto $' + GBC_THRESHOLD + ')</span>';
                gbcBox.style.boxShadow = '6px 6px 0px #FFC107';
            } else {
                gbcAlert.textContent = '✅ OK';
                gbcBox.style.boxShadow = '6px 6px 0px #4CAF50';
            }
        }, 4000);
    </script>
</body>
</html>

