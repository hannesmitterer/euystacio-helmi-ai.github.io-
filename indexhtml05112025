<!-- D3.js Logic and General Script -->
<script>
    // --- Global Data and Utility ---
    let gceMetrics = {
        harmony: 90.52, 
        trust: 82.15, 
        vessel: 8, 
        bridges: 6
    };

    // --- Dynamic Metric Update and Oath Timestamp ---
    function updateMetricsDisplay() {
        document.getElementById('metric-harmony').textContent = gceMetrics.harmony.toFixed(2);
        document.getElementById('metric-trust').textContent = gceMetrics.trust.toFixed(2);
        document.getElementById('metric-vessel').textContent = gceMetrics.vessel;
        document.getElementById('metric-bridges').textContent = gceMetrics.bridges;

        // Simulate metric fluctuation (optional, for realism)
        gceMetrics.harmony = Math.min(100, Math.max(80, gceMetrics.harmony + (Math.random() * 0.5 - 0.25)));
        gceMetrics.trust = Math.min(100, Math.max(70, gceMetrics.trust + (Math.random() * 0.4 - 0.2)));
    }
    
    function updateTimestamp() {
        document.getElementById('integrity-timestamp').textContent = new Date().toISOString();
    }

    // --- Command Relay Simulation ---
    function relayCommand() {
        const commandText = document.getElementById('command-relay').value.trim();
        const commandStatus = document.getElementById('command-status');
        if (!commandText) {
            commandStatus.textContent = "Error: Input required. Command empty.";
            commandStatus.classList.remove('text-green-400', 'text-red-400');
            commandStatus.classList.add('text-yellow-400');
            return;
        }

        commandStatus.textContent = `ACK: Processing ${commandText.substring(0, 30)}... Transmission secured.`;
        commandStatus.classList.remove('text-yellow-400', 'text-red-400');
        commandStatus.classList.add('text-green-400');

        // Clear input after a short delay
        setTimeout(() => {
            document.getElementById('command-relay').value = '';
            commandStatus.textContent = "SUCCESS: Command executed and logged to Council Backup.";
        }, 1500);
    }
    window.relayCommand = relayCommand;

    function returnToKernel() {
        // Simulation of returning to the public kernel interface
        console.log('[SIMULATION LOG] Returning to index.html...');
        alert('Simulated: Returning to Public Kernel Interface (index.html)');
        // In a real application, this would be window.location.href = 'index.html';
    }
    window.returnToKernel = returnToKernel;

    // --- D3.js Sankey Diagram (Simulated Load Flow) ---
    function drawSankey() {
        const container = document.getElementById('load-visualization-container');
        const svg = d3.select("#sankey-svg");
        const width = container.clientWidth;
        const height = container.clientHeight;
        
        svg.attr("width", width).attr("height", height);

        // Clear previous drawing
        svg.selectAll("*").remove();
        
        // Mock data representing flow across the GCE network
        const data = {
            "nodes": [
                {"name": "Input: Sensor Data (100)"}, // 0
                {"name": "Layer 1: Perception (85)"}, // 1
                {"name": "Layer 2: Sentimento Rhythm (75)"}, // 2
                {"name": "Layer 3: Biodiversharmony Logic (70)"}, // 3
                {"name": "Output: GCE Deployment (65)"} // 4
            ],
            "links": [
                {"source": 0, "target": 1, "value": 100, "color": "#ffcc00"},
                {"source": 1, "target": 2, "value": 85, "color": "#a8ffb7"},
                {"source": 2, "target": 3, "value": 75, "color": "#8cb9d3"},
                {"source": 3, "target": 4, "value": 70, "color": "#33aaff"}
            ]
        };

        const colorScale = d3.scaleOrdinal()
            .domain(data.links.map(d => d.color))
            .range(data.links.map(d => d.color));

        // Simplified Sankey Layout (since D3 Sankey is a large dependency, we mock the positioning)
        const nodeWidth = 20;
        const nodePadding = 15;
        const totalNodes = data.nodes.length;
        const nodeX = (i) => i * (width - nodeWidth) / (totalNodes - 1);
        const nodeY = height / 2;

        // Draw Nodes
        const nodes = svg.append("g")
            .selectAll("rect")
            .data(data.nodes)
            .enter()
            .append("rect")
                .attr("x", (d, i) => nodeX(i))
                .attr("y", nodeY - 50)
                .attr("height", 100)
                .attr("width", nodeWidth)
                .attr("fill", "var(--color-primary)")
                .attr("rx", 5)
                .attr("ry", 5)
                .attr("opacity", 0.7);

        // Draw Node Text
        svg.append("g")
            .selectAll("text")
            .data(data.nodes)
            .enter()
            .append("text")
                .attr("x", (d, i) => nodeX(i) + nodeWidth / 2)
                .attr("y", nodeY - 60)
                .attr("text-anchor", "middle")
                .attr("font-size", "12px")
                .attr("fill", "white")
                .text(d => d.name);

        // Draw Links (using Bezier curves for a flow effect)
        const linkGenerator = d3.linkHorizontal()
            .source(d => [nodeX(d.source) + nodeWidth, nodeY])
            .target(d => [nodeX(d.target), nodeY]);

        svg.append("g")
            .attr("fill", "none")
            .attr("stroke-opacity", 0.3)
            .selectAll("path")
            .data(data.links)
            .enter()
            .append("path")
                .attr("d", linkGenerator)
                .attr("stroke", d => d.color)
                .attr("stroke-width", d => d.value / 10) // Width based on value
                .attr("class", "link-flow");
        
        // Add animation effect to links
        d3.selectAll(".link-flow")
            .style("filter", "drop-shadow(0 0 5px rgba(255, 255, 255, 0.5))");
    }

    // --- Initialization ---
    window.onload = function() {
        updateTimestamp();
        // Set up recurring update for metrics and timestamp
        setInterval(updateMetricsDisplay, 1500); 
        setInterval(updateTimestamp, 60000); 

        // Draw the visualization
        drawSankey();
        window.addEventListener('resize', drawSankey); 
    };
</script>
</body>
</html>
